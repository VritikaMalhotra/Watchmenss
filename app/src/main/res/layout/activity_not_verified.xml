<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotVerified"
    android:background="@color/bgrey">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/actionbar"
        app:layout_constraintBottom_toTopOf="@+id/textViewFlatNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="48dp"
            android:layout_height="39dp"
            android:layout_alignBottom="@+id/buttonHome"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="-3dp"
            android:background="@drawable/back"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/buttonHome"
            android:layout_width="33dp"
            android:layout_height="34dp"
            android:layout_alignBottom="@+id/textView"
            android:layout_marginStart="82dp"
            android:layout_marginBottom="-4dp"
            android:layout_toEndOf="@+id/textView"
            android:background="@drawable/home"
            tools:layout_editor_absoluteX="335dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_bold"
            android:text="Not Verified User"
            android:textColor="@android:color/background_light"
            android:textColorLink="@android:color/background_light"
            android:textSize="18sp" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginBottom="228dp"
        android:src="@drawable/notverified"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.947"></ImageView>

    <Button
        android:layout_width="380dp"
        android:layout_height="69.33dp"
        android:layout_below="@id/imageview"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginTop="644dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/button1"
        android:clickable="true"
        android:fontFamily="@font/montserrat_bold"
        android:text="OK"
        android:textColor="#FFFFFF"
        android:textSize="18.66dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>